BasedOnStyle: LLVM
UseTab: Never
IndentWidth: 4
TabWidth: 4
BreakBeforeBraces: Allman
AllowShortIfStatementsOnASingleLine: false
IndentCaseLabels: false
ColumnLimit: 0
AccessModifierOffset: -4
NamespaceIndentation: None
FixNamespaceComments: false
IncludeCategories:
  - Regex:           '^<([a-zA-Z0-9_.]+)>'
    Priority:        1
  - Regex:           '^"(pico)/'
    Priority:        2
  - Regex:           '^"(hardware)/'
    Priority:        3
  - Regex:           '^"(common)/'
    Priority:        4
  - Regex:           '.*'
    Priority:        5