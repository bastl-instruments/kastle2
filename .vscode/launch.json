{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "core",
            "type": "pickString",
            "description": "Choose the core to debug",
            "options": [
                "RP2040_M0_0",
                "RP2040_M0_1"
            ],
            "default": "RP2040_M0_0"
        },
        {
            "id": "target",
            "type": "pickString",
            "description": "Choose the debug target",
            "options": [
                "calibration",
                "fx-wizard",
                "wave-bard",
                "wave-bard-with-samples",
                "example-synth",
                "template"
            ],
            "default": "wave-bard"
        }
    ],
    "configurations": [

        {
            "name": "J-Link Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "executable": "code/build/output/kastle2-${input:target}.elf",
            "armToolchainPath": "${env:PICO_TOOLCHAIN_PATH}",
            "device": "${input:core}",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 1,
            },
            "interface": "swd",
            "serialNumber": "", //
            "runToEntryPoint": "", // for example "main"
            "postRestartCommands": [],
            "postResetCommands": [],
            "preLaunchTask": "build_and_upload_jlink",
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "showDevDebugOutput": "parsed"
        },
        {
            "name": "Pico Probe Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "code/build/output/kastle2-${input:target}.elf",
            "gdbPath": "arm-none-eabi-gdb",
            "device": "RP2040",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "", // for example "main"
            "preLaunchTask": "build_and_upload_picoprobe",
            "postRestartCommands": [
                "continue"
            ]
        }
    ]
}